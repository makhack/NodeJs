<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"> Latest Comments</h3>
    </div>
    <div class="panel-body">
        <ul class="media-list">
        {{#each sidebar.newest}}
           <li class="media">
               <a class="media" href="/images/{{ image.uniqueId }}">
                <img src="/public/upload/{{ image.filename }}"
                     class="media-object" width="45" height="45" />
               </a>
               <div class="media-body">
                   {{ comment }}
                    <br />
                    <strong class="media-heading">{{ name }}</strong> 
                    <small class="text-muted">{{ timeago timestamp }}</small>
               </div>
           </li> 
        {{/each}}
        </ul>
    </div>
</div>