<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">create a hype product</h3>
    </div>
    
    <form method="POST" action="/products">
        <div class="panel-body form-horizontal">
            <div class="form-group col-md-12">
                <label class="col-sm-2 control-label" for="nom">nom: </label>
                <div class="col-md-10">
                    <input type="text" name="nom" class="form-control" />
                </div>
            </div>
            <div class="form-group col-md-12">
                <label class="col-sm-2 control-label" for="prix">prix: </label>
                <div class="col-md-10">
                    <input type="text" name="prix" class="form-control" />
                </div>
            </div>
            <div class="form-group col-md-12">
                <label class="col-sm-2 control-label" for="poids">poids: </label>
                <div class="col-md-10">
                    <input type="text" name="poids" class="form-control" />
                </div>
            </div>
            <div class="form-group col-md-12">
                <label class="col-sm-2 control-label" for="stock">stock: </label>
                <div class="col-md-10">
                    <input type="text" name="stock" class="form-control" />
                </div>
            </div>
            
            <div class="form-group col-md-12">
                <label class="col-sm-2 control-label" for="category_id">categorie: </label>
                <div class="col-md-10">
                    <select name="category_id" class="form-control" >
                        {{#each categories}}
                            <option value="{{_id}}">{{libelle}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            
            <div class="form-group col-md-12">
                <div class="col-md-12 text-right">
                    <button type="submit" type="button" id="login-btn" class="btn btn-success" >
                        <i class="fa fa-plus"></i> create product
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">liste des produits</h3>
    </div>
    <div class="panel-body">
        {{> cart this}}
        
        {{#each products}}
            <div class="col-md-4 text-left" style="padding-bottom: 1em;">
                <strong> {{ nom }} : {{prix}} : {{poids}} : {{stock}} </strong> 
            </div>
            <div class="col-md-4 text-center" style="padding-bottom: 1em;">
                <strong> {{ category.libelle }} </strong> 
            </div>
             <div class="col-md-2 text-right" style="padding-bottom: 1em;">
                  <button class="btn btn-login prod-btn-add" data-id="{{ _id }}">
                    <i class="fa fa-plus"></i>
                </button> 
            </div>
            <div class="col-md-2 text-right" style="padding-bottom: 1em;">
                  <button class="btn btn-danger prod-btn-delete" data-id="{{ _id }}">
                    <i class="fa fa-times"></i>
                </button> 
            </div>
            
        {{/each}}
    </div>
</div>



