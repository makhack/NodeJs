<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Upload a cute cat</h3>
    </div>
    <form method="POST" action="/images" enctype="multipart/form-data">
        <div class="pane-body form-horizontal">
            <div class="form-group col-md-12">
                <label class="col-sm-2 control-label" for="file">Browse:</label>
                <div class="col-md-10">
                    <input type="file" name="file" class="form-control"/>
                </div>
            </div>
        </div>
        <div class="pane-body form-horizontal">
            <div class="form-group col-md-12">
                <label class="col-sm-2 control-label" for="title">Titre:</label>
                <div class="col-md-10">
                    <input type="text" name="title" class="form-control"/>
                </div>
            </div>
        </div>
        <div class="pane-body form-horizontal">
            <div class="form-group col-md-12">
                <label class="col-sm-2 control-label" for="description">Description:</label>
                <div class="col-md-10">
                    <textarea type="text" rows="2" name="description" class="form-control"></textarea>
                </div>
            </div>
        </div>
        <div class="form-group col-md-12">
            <div class="col-md-12 text-right">
                <button type="submit button" id="login-btn" class="btn btn-sucess">
                    <i class="fa fa-cloud"></i> upload cat image
                </button>
            </div>
        </div>
    </form>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Newest images </h3>
    </div>
    <div class="panel-body">
        {{#each images}}
            <div class="col-md-4 text-center" style="padding-bottom: 1em;">
                <a href="/images/{{ uniqueId }}">
                    <img src="/public/uploads/{{ filename }}" alt="{{ title }}" style="width: 175px; height: 175px;" class="img-thumbnail"/>
                </a>
            </div>
        {{/each}}
    </div>
</div>